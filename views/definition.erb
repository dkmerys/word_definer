<h3>Definition: <%= @definition.definition %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="edit_def">Change Definition?</label>
  <input id="edit_def" name="edit_def" type="text">

  <button type="submit">Change</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>
