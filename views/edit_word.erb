<h1>Change <%= @word.name() %></h1>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="new_name">Change word</label>
  <input id="new_name" name="new_name" type="text">

  <button type="submit">Update</button>
</form>

<p><a href="/words">Return to list of words</a></p>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>